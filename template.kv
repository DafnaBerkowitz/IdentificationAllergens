
<MyLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Select your allerg"
			font_size:26

		GridLayout:
			cols:2
			Label:
				text: "Gluten"
				font_size:20
			CheckBox:
				on_active: root.checkbox_click(self, self.active, "0")

			Label:
				text: "Milk"
				font_size:20
			CheckBox:
				on_active: root.checkbox_click(self, self.active, "1")

			Label:
				text: "Peanuts"
				font_size:20
			CheckBox:
				on_active: root.checkbox_click(self, self.active, "2")

			Label:
				text: "Soy"
				font_size:20
			CheckBox:
				on_active: root.checkbox_click(self, self.active, "3")

			Label:
				text: "Tuna"
				font_size:20
			CheckBox:
				on_active: root.checkbox_click(self, self.active, "4")

			Label:
				text: "Eggs"
				font_size:20
			CheckBox:
				on_active: root.checkbox_click(self, self.active, "5")

			Label:
				text: "Fish"
				font_size:20
			CheckBox:
				on_active: root.checkbox_click(self, self.active, "6")

			Label:
				text: "Nuts"
				font_size:20
			CheckBox:
				on_active: root.checkbox_click(self, self.active, "7")
			Label:
				text: "Tonsils"
				font_size:20
			CheckBox:
				on_active: root.checkbox_click(self, self.active, "8")




		Label:
			id: output_label
			text: ""
			font_size:32
			BoxLayout:

		Label:
			id: endAnswer
			text: ""
			font_size:20
			BoxLayout:

        Button:
            size:(80,80)
            size_hint:(None,None)
            text:"Click me"
            on_press: root.say_hello()