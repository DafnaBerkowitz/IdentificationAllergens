ScreenManager:
    font_name:"Sticky Notes.ttf"
    MenuScreen:
    UploadScreen:
    AllergScreen:
    Lang:




<MenuScreen>:
    name: 'menu'
    font_name:"Sticky Notes.ttf"
	orientation: "vertical"
	size: root.width, root.height

    MDRectangleFlatButton:
        text: 'Test your product'
        font_size:"50"


        font_name:"Sticky Notes.ttf"
        line_width:"2"
        pos_hint: {'center_x':0.5,'center_y':0.3}
        on_press:
            root.manager.current = 'allerg'









<UploadScreen>:
    name: 'upload'

    Image:
        id: my_image
        source: "galleryToCameraPage.png"
        size_hint_y: None  # Tells the layout to ignore the size_hint in y dir
        height: dp(300)  # The fixed height you want

        pos_hint: {'center_x':0.5,'center_y':0.5}


    MDLabel:
        text: 'select or take a picture of your product'
        color:.03, .6, .9, 1
        font_size:"40"
        font_name:"Sticky Notes.ttf"

        line_width:"2"
        pos_hint: {'center_x': .75, 'center_y': .9}
    MDRaisedButton:
        pos_hint: {'center_x': .075, 'center_y': .05}
        text: "Back"
        font_size:"20"
        font_name:"Sticky Notes.ttf"
        line_width:"2"
        # on_press: root.manager.current = 'allerg'
        on_press: root.on_upload_back()
    MDIconButton:
        id: camera_button
        icon:"camera.png"
        pos_hint: {'center_x':0.7,'center_y':0.1}
        on_press:
            root.start_camera()

    MDIconButton:
        id: uploued_button
        icon:"upload_file.png"

        pos_hint: {'center_x':0.5,'center_y':0.1}
        on_press: root.upload_file()

    MDRaisedButton:
        pos_hint: {'center_x': .92, 'center_y': .05}
        text: "next"
        font_size:"20"
        font_name:"Sticky Notes.ttf"
        line_width:"2"

        on_release:
            root.manager.current = 'lang'

<AllergScreen>:
    name: 'allerg'

    MDLabel:
        text: 'Select your Allergan'
        color:.03, .6, .9, 1
        font_name: 'Sticky Notes.ttf'
        font_size: "32"
        pos_hint: {'center_x': .9, 'center_y': .9}

    ScrollView:
        bar_width: 6
        scroll_timeout: 250
        scroll_distance: 20
        do_scroll_y: True
        do_scroll_x: False
        pos_hint: {'top': 1}
        bar_width: 8
        bar_inactive_color: .03, .6, .9, 1
        bar_color: .5, .5, .5, 1
        effect_cls: "ScrollEffect"
        scroll_type: ['bars']




        size_hint:(.8,.7)
        pos_hint: {'center_x': .5, 'center_y': .5}

        MDList:
            id: scroll
            spacing: 5
            padding: 10


    MDRaisedButton:
        pos_hint: {'center_x': .92, 'center_y': .05}
        text: "next"
        font_name: 'Sticky Notes.ttf'
        font_size:"20"
        on_release:
            root.save_checked()
            root.manager.current = 'upload'

<ListItemWithCheckbox>:

    IconLeftWidget:
        icon: root.icon

    RightCheckbox:
        listItem: root

        id: cb


<Lang>:
    name: 'lang'
    MDRectangleFlatButton:
        id: startProcess
        text: 'start'
        font_size:"20"
        font_name:"Sticky Notes.ttf"
        line_width:"2"
        pos_hint: {'center_x':0.5,'center_y':0.1}
        on_press: root.startProcess()
    MDTextField:
        id: field
        pos_hint: {'center_x': .5, 'center_y': .6}
        size_hint_x: None
        width: "200dp"
        hint_text: "Choose your product language"
        font_size:"20"
        font_name:"Sticky Notes.ttf"
        line_width:"2"
        on_focus: if self.focus:root.on_enter(*args)
    MDLabel:
        id: ansLabel
        text: ''
        font_size:"50"
        font_name:"Sticky Notes.ttf"
        line_width:"2"
        pos_hint: {'center_x': .7, 'center_y': .9}
    MDRaisedButton:
        pos_hint: {'center_x': .075, 'center_y': .05}
        text: "Back"
        font_size:"20"
        font_name:"Sticky Notes.ttf"
        line_width:"2"
        on_press: root.manager.current = 'upload'






<IconListItem>

    IconLeftWidget:
        icon: root.icon
    MDScreen



